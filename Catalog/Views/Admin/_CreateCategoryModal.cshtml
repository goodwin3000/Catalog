           function (data)
           {
               if (data != -1) {
                   $("#CatCreateResult").text("Категория успешно создана");
                   $("#CategoryTable").load('/Admin/GetCategory');
                   $("#CreateCategoryDialog").modal('hide');
               }
               else
               {
                   $("#CatCreateResult").text("Категория существует");
               }
           })*@
   }
</script>
